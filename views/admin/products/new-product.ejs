<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/base.css" />
    <link rel="stylesheet" href="/styles/navigation.css" />
    <link rel="stylesheet" href="/styles/form.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100;8..144,200;8..144,300;8..144,400&display=swap"
      rel="stylesheet"
    />

    <title>Add New Product</title>
  </head>
  <body>
    <%-include('../../shared/includes/header')%>
    <main>
      <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
        <div>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />
        </div>
        <div id="image-upload-control">
          <div>
            <label for="image">Image</label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/png,image/jpg"
            />
          </div>
        </div>
        <div>
          <label for="price">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            min="0.01"
            step="0.01"
            required
          />
        </div>
        <div>
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="7" required>
          </textarea>
        </div>
        <div>
          <button class="btn btn-alt" type="reset">Reset</button>
          <button class="btn" type="submit">Save</button>
        </div>
      </form>
    </main>
    <script src="/scripts/script.js"></script>
  </body>
</html>
